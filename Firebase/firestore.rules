rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['sim_admin', 'sys_admin'];
    }
    
    function isSysAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'sys_admin';
    }
    
    // Templates - public read, admin write
    match /templates/{collection}/{docId} {
      allow read: if true;  // Anyone can read templates
      allow write: if isSysAdmin();  // Only sys_admin can modify
    }
    
    // Species, Classes, Vocations (alternative flat structure)
    match /species/{docId} {
      allow read: if true;
      allow write: if isSysAdmin();
    }
    
    match /classes/{docId} {
      allow read: if true;
      allow write: if isSysAdmin();
    }
    
    match /vocations/{docId} {
      allow read: if true;
      allow write: if isSysAdmin();
    }
    
    // Users - users can read own data, admins can read all
    match /users/{odId} {
      allow read: if request.auth != null && 
                    (request.auth.uid == odId || isAdmin());
      allow create: if request.auth != null && request.auth.uid == odId;
      allow update: if request.auth != null && 
                      (request.auth.uid == odId || isSysAdmin());
      allow delete: if isSysAdmin();
    }
    
    // Characters - users can CRUD own, admins can read/modify all
    match /characters/{odId} {
      allow read: if request.auth != null && 
                    (resource.data.owner_uuid == request.auth.uid || isAdmin());
      allow create: if request.auth != null && 
                      request.resource.data.owner_uuid == request.auth.uid;
      allow update: if request.auth != null && 
                      (resource.data.owner_uuid == request.auth.uid || isAdmin());
      allow delete: if request.auth != null && 
                      (resource.data.owner_uuid == request.auth.uid || isSysAdmin());
    }
    
    // Sessions - only the owner can access
    match /sessions/{sessionId} {
      allow read, write: if request.auth != null && 
                           resource.data.uuid == request.auth.uid;
      allow create: if request.auth != null;
    }
    
    // Config - public read, sys_admin write
    match /config/{docId} {
      allow read: if true;
      allow write: if isSysAdmin();
    }
  }
}

